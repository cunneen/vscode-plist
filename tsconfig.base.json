{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "lib": ["es2020"],
    "target": "es2020",
    "declaration": false,
    "outDir": "./",
    "rootDir": "src"
  },
  "include": [
    "./node_modules/@vscode/codicons/dist/codicon.css",
